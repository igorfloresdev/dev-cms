// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Home {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  title      String?  @db.VarChar(255)
  subtitle   String?  @db.VarChar(255)
  image_url  String?  @db.VarChar(255)
}

model About_Me {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  text       String?  @db.Text
}

model Skills {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  name       String?  @unique @db.VarChar(255)
  image_url  String   @db.VarChar(255)
}

model Projects {
  id                String   @id @default(uuid())
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
  title             String   @unique @db.VarChar(255)
  description       String?  @db.Text
  project_url       String?  @db.VarChar(255)
  repo_frontend_url String?  @db.VarChar(255)
  repo_backend_url  String?  @db.VarChar(255)
  repo_mobile_url   String?  @db.VarChar(255)
  image_url         String?  @db.VarChar(255)

  tecnologies Projects_Tecnologies[]
}

model Tecnologies {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  name       String   @unique @db.VarChar(255)

  projects Projects_Tecnologies[]
}

model Projects_Tecnologies {
  project      Projects    @relation(fields: [project_id], references: [id])
  project_id   String
  tecnology    Tecnologies @relation(fields: [tecnology_id], references: [id])
  tecnology_id String
  assigned_at  DateTime    @default(now())

  @@id([project_id, tecnology_id])
}
